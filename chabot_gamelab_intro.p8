//variables need to be outside functions
 x_intro = -12
 x_intro_s = -12
 y_intro = 40
 new_x = x_intro
 switch = true
 is_intro = true
  
function intro() 
 id = 2
 intro_time = 240 //time limit
//adjust based on interval (see below) 
 intro_speed = 0.75
 
 print("developed by:",5,41,15)
 print("chabot",50,51,15)
 print("game lab",45,61,15)
 
 //debug
 print(x_intro,0,0)
	print(is_intro,0,8)
	 
//switch btwn sprites
 if switch then
  id = 2
 else
  id = 1
 end

//for covering text
	rectfill(x_intro+5,y_intro,128,y_intro+8,0)
 rectfill(130-x_intro,y_intro+10,0,y_intro+18,0)
 rectfill(x_intro_s-3,y_intro+20,128,y_intro+28,0)
  //behind top duck 
 rectfill(x_intro-78,y_intro,0,y_intro+8,0)
 
//duck sprite
 spr(id,x_intro,y_intro)
 spr(id,128-x_intro,y_intro+10,1,1,true)
 spr(id,x_intro_s-8,y_intro+20)

 new_x += intro_speed	
 																							  	//-->
//change values to be divisible by the interval number
	if x_intro < intro_time then 
 //intervals of 3
	 if (new_x % 3) <= 0 then
	  x_intro = new_x
	  if x_intro < 88 then
	   x_intro_s = new_x
	  end
	  if x_intro < 136 then
	  	switch = not switch
	   sfx(0)
	  else if x_intro == 141 then
	    sfx(1)
	  end end
	 end	 
	end	 

 if x_intro > intro_time-40 then
		rectfill(0,0,128,128,0)
	end

//end intro
	if x_intro > intro_time-3 then
		is_intro = false
	end
	
end 

function _draw()
 cls()

	if is_intro then
  intro()
	else
	//replace to start creating
			print("intro done",0,16,7)		
	end
end


